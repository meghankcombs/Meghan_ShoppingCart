@model MeghanC_ShoppingCart.Models.Order

<div id="content">
    <div class="container">

        <div class="col-md-12">
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li>Receipt</li>
            </ul>

        </div>

        <div class="col-md-3">
            <!-- *** CUSTOMER MENU *** -->
            <div class="panel panel-default sidebar-menu">

                <div class="panel-heading">
                    <h3 class="panel-title">Account Menu</h3>
                </div>

                <div class="panel-body">

                    <ul class="nav nav-pills nav-stacked">
                        <li class="active">
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Orders")"><i class="fa fa-list"></i> My orders</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","ShoppingCarts")"><i class="fa fa-heart"></i> My Cart</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Register","Account")"><i class="fa fa-user"></i> My account</a>
                        </li>
                    </ul>
                </div>

            </div>
            <!-- *** CUSTOMER MENU END *** -->
        </div>

        <div class="col-md-9">
            <div class="box" id="contact">
                <h1>Thank you for your order!</h1>

                <p class="lead">Order Details</p>
                <hr>
                <div class="row">
                    <div class="col-sm-6">
                        <h4><i class="fa fa-map-marker"></i> Shipped To:</h4>
                        <p>
                            @Model.ShipToFirstName @Model.ShipToLastName
                            <br>@Model.Address
                            <br>@Model.City, @Model.State @Model.ZipCode
                            <br>@Model.Country
                            <br>@Model.Phone
                        </p>
                    </div>
                    <div class="col-sm-6">
                        <h4><i class="fa fa-question-circle"></i> Need Help?</h4>
                        <p class="text-muted">Customer Support</p>
                        <br class="fa fa-phone">Phone: 1-800-Support
                        <br class="fa fa-envelope-o">Email: info@artgallery.com
                    </div>
                </div>
                <!-- /.row -->

                <hr>

                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a href="@Url.Action("Index","Items")" class="btn btn-primary"><i class="fa fa-chevron-left"></i> Continue Shopping</a>

                    </div>
                </div>
                <!-- /.row -->
            </div><!-- END CONTACT -->


        </div>
        <!-- /.col-md-9 -->
    </div>
    <!-- /.container -->
</div>
<!-- /#content -->
