@model IEnumerable<MeghanC_ShoppingCart.Models.Order>

<div id="content">
    <div class="container">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li>Your Orders</li>
            </ul>
        </div>

        <div class="col-md-3">
            <!-- *** CUSTOMER MENU *** -->
            <div class="panel panel-default sidebar-menu">

                <div class="panel-heading">
                    <h3 class="panel-title">Account Menu</h3>
                </div>

                <div class="panel-body">

                    <ul class="nav nav-pills nav-stacked">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","ShoppingCarts")"><i class="fa fa-heart"></i> My Cart</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Contact","Home")"><i class="fa fa-envelope"></i> Contact</a>
                        </li>
                    </ul>
                </div>

            </div>
            <!-- *** CUSTOMER MENU END *** -->
        </div>

        <div class="col-md-9" id="customer-orders">
            <div class="box">
                <h1>Order History</h1>
                <hr />
                <div class="table-responsive">
                    <table class="table table-hover">
                        @foreach (var order in Model)
                        {
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@order.OrderDate</td>
                                    <td>$@order.Total</td>
                                    <td>
                                        <span class="label label-warning">Ordered</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-primary btn-sm">View</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
</div>
<!-- /#content -->

@section scripts {
    @if (TempData.ContainsKey("Message"))
    {
        <script>
            $(function () {
                swal('Access Denied!', '@TempData["Message"]', 'error');
            });
        </script>
    }
}
